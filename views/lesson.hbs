<div class="row container mt-5" style="width:100%;height:100%;margin:auto">
  <div class="col-8">
    <div class="d-flex mb-3">
      <img src="{{this.User.avatar}}" alt="你的大頭貼" style="height:200px;width:200px;background-color:gray;margin-bottom:20px">
      <div style="margin-left:40px;margin-top:10px;"> 
        <h3>{{lesson.User.name}}</h3>
        <div>
          <p>{{lesson.User.nation}}</p>
          <p>平均評分</p>
        </div>
      </div>
    </div>
    <div class="d-flex flex-column justify-content-between" style="height:60%">
      <div style="height:30%">
        <h5>自我介紹</h5>
        <p>{{lesson.User.introduction}}</p>
      </div>
      <div style="height:30%">
        <h5>課程及教學風格</h5>
        <p>{{lesson.introduction}}</p>
      </div>
      <div style="height:30%">
        <h5>課程評價</h5>
        <div class="d-flex">
          <div style="margin-right:10px;background-color:yellow">分數</div>
          <p>評價內容</p>
        </div>
        
      </div>
    </div>
  </div>
  <div class="col-4">
    {{#if noAvaiTime}}
    <div style="padding-top:5px;background-color:gray;height:40px;text-align:center;font-size:20px">目前無可預約時段</div>
    {{else}}
    <div style="margin-bottom:20px;padding-top:5px;background-color:gray;height:40px;text-align:center;font-size:20px">預約上課</div>
    <form action="/enrollment/{{lesson.id}}" method="POST" style="width:100%">
      <select id="avaiTime" name="avaiTime" style="width:100%">
        {{#each avaiTime}}
        <option value="{{this.time}}">{{this.formatTime}}</option>
        {{/each}}
      </select>
      <div class="mt-5 d-flex flex-row-reverse">
        <button type="submit" class="mb-3 btn btn-primary btn-block">預約該時段</button>
      </div>
    </form>
      {{/if}}
  </div>
</div>





