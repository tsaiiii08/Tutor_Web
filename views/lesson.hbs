{{> message}}
<div class="row container mt-5 mb-5" style="width:100%;height:100%;margin:auto">
  <div class="col-8">
    <div class="d-flex mb-3">
      <img src="{{lesson.User.avatar}}" alt="" style="height:200px;width:200px;background-color:gray;border-radius:50%;margin-bottom:20px">
      <div style="margin-left:40px;margin-top:10px;"> 
        <h3>{{lesson.User.name}}</h3>
        <div>
          <div class="mt-4 mb-2 d-flex align-items-center">
            <i class="fa-solid fa-house" style="margin-right:5px"></i>
            <p style="margin:0">{{lesson.User.nation}}</p>
          </div>
          <div class="d-flex align-items-center">
            <i class="fa-regular fa-heart" style="margin-right:5px"></i>
            <p style="margin:0">{{avgScore}}</p>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex flex-column justify-content-between" style="min-height:60%">
      <div style="min-height:30%" class="mt-2">
        <h5>自我介紹</h5>
        <div class="border-top mb-4" style="height:auto;word-break:break-all;padding-right:10px;padding-top:10px">{{lesson.User.introduction}}</div>
      </div>
      <div style="min-height:30%" class="mt-2">
        <h5>課程名稱及教學風格</h5>
        <div class="border-top mb-4" style="padding-top:10px" >
          <div style="font-size:19px">
            {{lesson.name}}
          </div>
          <div style="height:auto;word-break:break-all;padding-right:10px;padding-top:5px">{{lesson.introduction}}</div>
        </div>
       
      </div>
      <div style="min-height:30%" class="mt-2">
        <h5>課程評價</h5>
        <div class="row border-top mb-4" style="padding-top:10px">
          {{#each rates}}
          <div class="mt-2 d-flex">
            <div class="d-flex align-items-center justify-content-center"
              style="width:20px;background-color:yellow;margin-right:10px;font-weight:bold">{{this.score}}</div>
            <div class="border rounded" style="width:100%;padding:5px;text-align:start">{{this.comment}}</div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  <div class="col-4">
    {{#if noAvaiTime}}
    <div style="padding-top:5px;background-color:rgb(204, 231, 202);text-align:center;font-size:20px">目前無可預約時段</div>
    {{else}}
    <div style="margin-bottom:20px;padding-top:5px;background-color:rgb(204, 231, 202);height:40px;text-align:center;font-size:20px">預約上課</div>
    <form action="/enrollments/{{lesson.id}}" method="POST" style="width:100%">
      <select id="avaiTime" name="avaiTime" style="width:100%">
        {{#each avaiTime}}
        <option value="{{this.time}}">{{this.formatTime}}</option>
        {{/each}}
      </select>
      <div class="mt-5 d-flex flex-row-reverse">
        <button type="submit" class="mb-3 btn btn-primary btn-block">預約該時段</button>
      </div>
    </form>
      {{/if}}
  </div>
</div>





