<div class="mt-5 mb-5 container text-center" style="height:100%">
  <div class="row" style="height:100%" >
    {{> message}}
    {{#if user.isTeacher}}
    <div class="col-4 d-flex flex-column justify-content-between">
      <div class="row d-flex-column" style="text-align: start">
        <img src="{{user.avatar}}" alt="你的大頭貼" style="height:200px;width:200px;background-color:gray;margin-bottom:20px">
        <p style="font-size:30px;">{{user.name}}</p>
        <p>{{user.nation}}</p>
        <p>目前平均評分{{lesson.score}}</p>
        <p>{{user.introduction}}</p>
      </div>
      <div class="row d-flex">
        <a href="/users/{{user.id}}/edit" class="btn btn-info btn-block" style="width:200px">修改個人資料和可預約的上課時間</a>
      </div>
    </div>
    <div class="col-8 d-flex flex-column justify-content-between">
      <div class="row">
        <h5>New schedule</h5>
        <div class="d-flex border-top">
          {{#each schedule}}
          <div class="d-flex flex-column border">
            <p >時間:{{this.time}}</p>
            <p>學生姓名:{{this.studnetName}}</p>
            <p>上課連結:{{this.link}}</p>
          </div>
          {{/each}}
        </div>
      </div>
      <div class="row">
        <h5>課程及教學風格</h5>
        <div class="d-flex border-top">
          <p>{{lesson.introduction}}</p>
        </div>
      </div>
      <div class="row">
        <h5>近期獲得的評分</h5>
        <div class="column border-top">
        {{#each rates}}
          <div style="width:20px;background-color:yellow">{{this.score}}</div>
          <div class="d-flex border">{{this.content}}</div>
        {{/each}}
        </div>
      </div>
    </div>
    {{else}}
    <div class="col-4 d-flex flex-column justify-content-between">
      <div class="row d-flex-column" style="text-align: start">
        <img src="{{user.avatar}}" alt="你的大頭貼" style="height:200px;width:200px;background-color:gray;margin-bottom:20px">
        <p style="font-size:30px;">{{user.name}}</p>
        <p>{{user.nation}}</p>
        <p>{{user.introduction}}</p>
      </div>
      <div class="row d-flex">
        <a href="/users/{{user.id}}/edit" class="btn btn-info btn-block" style="width:200px">修改個人資料</a>
      </div>
    </div>
    <div class="col-8 d-flex flex-column justify-content-between">
      <div class="row">
        <h5>New schedule</h5>
        <div class="d-flex border-top">
          {{#each schedule}}
          <div class="d-flex flex-column border">
            <p>時間:{{this.time}}</p>
            <p>老師姓名:{{this.teacherName}}</p>
            <p>上課連結:{{this.link}}</p>
          </div>
          {{/each}}
        </div>
      </div>
      <div class="row">
        <h5>Lesson history</h5>
        <div class="d-flex border-top">
          {{#each history}}
          <div class="d-flex border">
            <img src="{{this.teacherAvatar}}" alt="老師的大頭貼">
            <p>老師姓名:{{this.teacherName}}</p>
            <a href="/enrollments/{{this.lessonId}}/rate  " class="btn btn-info btn-block">評分</a>
          </div>
          {{/each}}
        </div>
      </div>
      <div class="row">
        <h5>我的學習時數名次</h5>
        <div class="d-flex border">
          {{user.rank}}/{{totalAmount}}
        </div>
      </div>
    </div>
    {{/if}}
  </div>
</div>